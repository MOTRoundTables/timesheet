{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp"
      ],
      "env": {},
      "disabled": false,
      "autoApprove": [
        "playwright_navigate",
        "playwright_click",
        "playwright_fill",
        "playwright_screenshot",
        "playwright_get_page_content",
        "playwright_wait_for_selector",
        "playwright_get_by_text",
        "playwright_get_by_role",
        "playwright_wait_for_load_state",
        "browser_navigate",
        "browser_close",
        "browser_install",
        "browser_tab_new",
        "browser_type",
        "browser_click"
      ]
    }
  }
}